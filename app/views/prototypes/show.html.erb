<main class="main">
  <div class="inner">
    <div class="prototype__wrapper">
      <p class="prototype__hedding">
        <%= @prototype.title %>
      </p>
      <a href="/users/<%= @prototype.user.id %>"><%= @prototype.user.name %>
      </a>
      <% if user_signed_in? && current_user.id == @prototype.user_id %>
        <div class="prototype__manage">
          <%= link_to "編集する", edit_prototype_path(@prototype.id), class: :prototype__btn %>
          <%= link_to "削除する", prototype_path(@prototype.id), class: :prototype__btn, method: :delete%>
        </div>
      
        <% else %>
          <% redirect_to new_user_session_path %>
        <% end %>
      <div class="prototype__image">
        <%= image_tag @prototype.image %>
      </div>
      <div class="prototype__body">
        <div class="prototype__detail">
          <p class="detail__title">キャッチコピー</p>
          <p class="detail__message">
            <%= @prototype.catch_copy %>
          </p>
        </div>
        <div class="prototype__detail">
          <p class="detail__title">コンセプト</p>
          <p class="detail__message">
            <%= @prototype.concept %>
          </p>
        </div>
      </div>
      
      <div class="prototype__comments">
        <% if user_signed_in? %>
           <%= form_with(model: [@prototype, @comment], local: true) do |f| %>
            <div class="field">
              <%= f.label :text, "コメント" %><br />
              <%= f.text_field :text %>
            </div>
            <div class="actions">
              <%= f.submit "送信する", class: :form__btn  %>
            </div>
          <% end %> 
          <% else %>
          <% redirect_to new_user_session_path %>
        <% end %>
        <ul class="comments_lists">コメント一覧
            <li class="comments_list">
            　<% if @comments %>
                <% @comments.each do |comment| %>
              　　　　　<p>
                 　　<%= comment.text %>
                 　　<a href="/users/<%= @prototype.user.id %>"><%= @prototype.user.name %></a>
              　　　　　</p>
              　<% end %>
              <% end %>
            </li>
        </ul>
      </div>
    </div>
  </div>
</main>